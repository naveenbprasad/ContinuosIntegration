node {
    try {
        stage('Checkout') {
            git url: 'https://github.com/naveenbprasad/ContinuosIntegration', branch: 'main'
        }

        stage('Build') {
            bat 'mvn clean'
        }

        stage('Test') {
            try {
                bat 'mvn test'
            } catch (Exception e) {
                echo "There are test failures.. Please refer report"
                currentBuild.result = 'FAILURE'
            }
        }

        stage('Publish Report') {
            publishHTML (target: [
                reportDir: 'target',
                reportFiles: 'ExtentReport.html',
                reportName: 'Extent Report',
                alwaysLinkToLastBuild: true,
                keepAll: true
            ])
        }

    } catch (Exception e)
        currentBuild.result = 'FAILURE'{
        echo "Pipeline failed: ${e.message}"
    } finally {
        if (currentBuild.result == 'SUCCESS') {
            echo 'Build and tests were successful!'
            emailext(
                to: 'naveenprasad_balasubramaniyan@epam.com',
                subject: "SUCCESS: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: "Good news! The build was successful.\n\nCheck the details at ${env.BUILD_URL}.",
                attachLog: true,
                attachmentsPattern: 'target/ExtentReport.html'
            )
        } else {
            echo 'Build or tests failed. Please review the report for details.'
            emailext(
                to: 'naveenprasad_balasubramaniyan@epam.com',
                subject: "FAILURE: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: "The build has failed.\n\nCheck the details at ${env.BUILD_URL}.",
                attachLog: true,
                attachmentsPattern: 'target/ExtentReport.html'
            )
        }
    }
}
